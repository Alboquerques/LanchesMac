@model CarrinhoCompraViewModel

<div class="container">
    <div class="row">
        <i class="bi bi-cart"></i>
        <div>
            <i class="bi bi-cart">Carrinho: </i>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-center">@item.Lanche.Nome</td>
                        <td class="text-center">@item.Lanche.Preco</td>
                        <td class="text-center">
                            @((item.Quantidade * item.Lanche.Preco).ToString("c"))
                        </td>
                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra" asp-route-lancheId="@item.Lanche.LancheId">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <td colspan="3" class="text-right">Total: </td>
                <td class="text-right">
                    @Model.CarrinhoCompraTotal.ToString("c");
                </td>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="button-group">
                <a class="btn btn-success" asp-controller="CarrinhoCompraController" asp-action="Checkout">Encerrar pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar Comprando</a>
            </div>
        </div>
    </div>
</div>