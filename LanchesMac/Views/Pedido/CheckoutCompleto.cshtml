@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckouCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Cliente: <strong>@Model.PedidoEnviado</strong></p>
            <p>Cliente: <strong>@Model.PedidoId</strong></p>
        </div>

        <table class="table">
            <th>Quantidade</th>
            <th>Lanche</th>
            <th>Preço</th>
            </tr>
            @foreach (var item in Model.PedidoItens)
            {
                <tr>
                    <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                    <td>@item.Quantidade</td>
                    <td>@item.Lanche.Nome</td>
                    <td>@item.Lanche.Preco</td>
                </tr>
            }
        </table>

        <h2> Valor total do pedido: <strong> @(((decimal)ViewBag.TotalPedido).ToString("cs"))</strong></h2>
    </div>
</div>
<div class="form-group" style="text-align : center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>